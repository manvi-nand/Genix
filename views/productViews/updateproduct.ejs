<% layout('layouts/boilerplate')%> 


<style>

    .form{
        max-width: 700px;
        margin:0 auto;
    }
    input{
        width:100%;
        height:40px;
        padding:10px;
    
    }
    label{
        font-weight: bold;
    }
    .centeralign{
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .centeralign>*{
        margin:10px;
    }


</style>

<h3 style='text-align: center;margin:35px;color:rgb(238, 96, 111)'>Update product details!</h3>


    <form class='form' action="/product/<%=product._id%>/update?_method=PUT" method="POST">

        <label for='name'>Edit product name : </label><br>
        <input type='text' id='name' placeholder='name' name='name' value='<%=product.name%>'><br><br>

        <label for='description'>Edit product description : </label><br>
        <textarea id='description' name='description' style="width: 100%;padding:10px; max-width: 100%;"><%=product.description%></textarea><br><br>

        <div class='centeralign'>
            <button style='width:200px' class='btn btn-danger'  type='submit'>Update Details</button>

            <a role='button' class="btn btn-danger" href='/product/<%=product._id%>/show'>Back to your product page</a>

        </div>
    
    </form>

    <br><br>

    